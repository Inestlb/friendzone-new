        collection: User::MOODS,
        as: :radio_buttons,
        collection_wrapper_tag: 'div',
        collection_wrapper_class: 'choices-wrapper',
        label_method: lambda { |choice| render 'users/choice_label', choice: choice },
        item_wrapper_class: 'choices-item',
        input_html: { class: 'choices-selector' } %>
    <% end %>

