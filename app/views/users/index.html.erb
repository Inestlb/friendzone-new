
  <div class="swiper" data-controller="swipe coordinates">
    <div class="swiper__content">
      <div class="swiper__card-cont">
        <div class="profile-container">
            <% @users.each do |user| %>
            <div class="swiper__card"
               data-swipe-target="card"
               data-id="<%= user.id %>"
               data-current="<%= current_user.id %>">
              <%= link_to 'Profile', user_path(user), class: 'profile-link hidden' %>
              <div class="swiper__card__content">

                <div class="swiper__card__content_top">
								<%# La partie du haut de la carte %>
              </div>
          <!-- Avatar -->
          <div class="avatar">
            <% if user.avatar.attached? %>
                <%= cl_image_tag user.avatar.key, class: 'swiper__card__img' %>
              <% else %>
                <%= image_tag "avatar-1.png", class: 'swiper__card__img' %>
              <% end %>
          </div>


    <!-- User Info -->
            <div class="swiper__card__content_bottom">
                <p class="swiper__card__name">
                  <strong><%= user.name %></strong>, <span class="profile-age"><%= user.age %></span>
                </p>
                <p class="swiper__card__distance">
                </p>


    <!-- Distance & Age -->
    <div class="stats-container">
      <div>
        <p>5 km</p>
        <small>Distance</small>
      </div>
      <div>
        <p>25-30</p>
        <small>Âge</small>
      </div>
      <div>
        <p> bla bla</p>
        <small>Langues</small>
      </div>

    </div>

     <!-- About -->
    <div class="about">
      <h5 class="section-title">À propos</h5>
      <p>Je viens de Bordeaux</p>

      <div class="pro">
      <h5 class="section-title">Vie pro</h5>
      <p>Je suis ...</p>
    </div>
    </div>


    <!-- Answers -->
      <h5 class="section-title">Réponses</h5>
    <div class="answers">
