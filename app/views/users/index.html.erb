      <img src="https://images.unsplash.com/photo-1450644995374-1721affb8ecd?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Voyage">
    </div>

    <!-- Events -->
      <div class="events-container mt-4">
      <h5>Événements</h5>
      <div class="event-item">
        <div class="event-icon event1"></div>
        <p class="event-text">Beach-Volley à Pantin</p>
      </div>
      <div class="event-item">
        <div class="event-icon event2"></div>
        <p class="event-text">Soirée Latino au Salsero</p>
      </div>
      <div class="event-item">
        <div class="event-icon event3"></div>
        <p class="event-text">Soirée Bachata au Cabaret Sauvage</p>
      </div>
    </div>
    </div>
    </div>
