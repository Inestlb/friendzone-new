<div data-controller="transition" class="sign-in-content" data-transition-target="content">
  <h2 style="font-family: 'Impact', sans-serif; letter-spacing: 2px;">LOG IN</h2>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %><br>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Enter" %><br>
    </div>
  <% end %>

  <br><%= render "devise/shared/links" %>
</div>
